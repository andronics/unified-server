NODE_ENV=test
PORT=3001

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=unified_server_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=5

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Auth
JWT_SECRET=test-secret-key-for-testing-only-minimum-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cache
CACHE_TTL=300

# Logging
LOG_LEVEL=error
LOG_PRETTY=false

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# CORS
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Metrics
METRICS_PORT=9091
